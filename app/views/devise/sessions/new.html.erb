<div class = "login">
	<div class = "login_inner">

		<h2>Sign in</h2>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.email_field :email, :autofocus => true, :class => 'login_textarea', :placeholder =>'Brandeis Email Address' %></div>

		  <div><%= f.password_field :password, :class => 'login_textarea', :placeholder=>'Password' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> remember me</div>
		  <% end -%>
		  <div class = "login_buttons">
			  <%= f.submit "Sign in", :class=>'btn btn-info', :id=>'sign_in_button' %>
			  <%= link_to "Sign Up",new_user_registration_path, :class => 'btn btn-warning', :id=>'sign_up_button' %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>

