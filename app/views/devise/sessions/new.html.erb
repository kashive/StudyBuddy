<div class = "login">
	<div class = "login_inner">

		<h2>Sign in</h2>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.email_field :email, :autofocus => true, :placeholder =>'Brandeis Email Address' %></div>

		  <div><%= f.password_field :password, :placeholder=>'Password' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> remember me</div>
		  <% end -%>
		  <div class = "login_buttons">
			  <%= f.submit "Sign in", :class=>'btn btn-info', :id=>'sign_in_button' %>
				  <%- if devise_mapping.omniauthable? %>
					  <%- resource_class.omniauth_providers.each do |provider| %>
					    <%= link_to "Or, Sign in/up with Facebook", omniauth_authorize_path(resource_name, provider), 
					    	html_options = {"data-original-title"=>"Warning",
					    					"title"=>"Will only work if your Facebook's primary email address is @brandeis.edu",
					    					"id"=>"fb_link",
					    					"class" => "btn btn-info"} %><br />

					  <% end -%>
					<% end %>
				<% end %>
		  </div>
		<%= render "devise/shared/links" %>
	</div>
</div>