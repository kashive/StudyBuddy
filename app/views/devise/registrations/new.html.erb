<div class = "login">
  <div class = "login_inner">

    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.email_field :email, :autofocus => true, :placeholder=>"Brandeis Email Address" %></div>
      <% if !f.object.email.include?('@brandeis.edu')%>
        <div><%= f.password_field :password, :placeholder => "Password (Minimum 8 characters)" %></div>
        <div><%= f.password_field :password_confirmation, :placeholder=>"Password Confirmation" %></div>
      <%end%>
      <div><%= f.text_field :first_name, :placeholder=>"First Name" %></div>

      <div><%= f.text_field :last_name,:placeholder=>"Last Name" %></div>

      <%= f.hidden_field :college, :value => "Dummy Professor" %>
      <div><%= f.submit "Register", :class=>'btn btn-info', :id=>"register_user"%></div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
