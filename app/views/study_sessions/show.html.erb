<div class = "span5" id = "list_table">
  <div class = "header_row">
    <div class = "header_pagination">
      <%=@study_session.title%>
      <!-- pagination of the table-->
    </div>

  </div>
  <div class = "class_list">
    <dl class="dl-horizontal">
      <dt><strong>Date and Time:</strong></dt>
      <dd><%= @study_session.time.to_s%></dd>
      <dt><strong>Category:</strong></dt>
      <dd><%= @study_session.category %></dd>
      <dt><strong>Location:</strong></dt>
      <dd><%= @study_session.location %></dd>
    </dl>
  </div>
</div>

<div class = "span5">
  <div class = "header_row">
  <div class = "header_pagination">
    Classmates
  </div>
  <script src = "//connect.facebook.net/en_US/all.js"></script>
  <div class = "add_course_button">
      <%=link_to "Invite your Facebook friends to join in", "#", :id => "invite_fb_friends", :class=> 'btn btn-primary'%>
  </div>
</div>
  <table class="table", id="classmates">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @course.getClassmates.each do |classmate| %>
          <td><%= classmate.first_name + " " + classmate.last_name %></td>
          <td><%= classmate.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

</div>
<div class = "span1"></div>
</div>

<div class = "row-fluid">
  <div class = "span1"></div>
  
  <div class = "span10">
    <div class = "news_heading">
      <p>Invitations</p>
    </div>
      <div class = "span5 facebook_marketing">
        <div class = "news_headings">
          <p>Current Status</p>
        </div> 
        <% if @study_session.host_id.to_s == current_user.id.to_s%>
          You are the host of this study sesssion <br>
          <%= link_to "Delete this study session", user_course_study_session_path(current_user, @course, @study_session), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
        <%else%>
          RSVP:<br>
          <%= link_to "Yes", invitation_update_path(current_user.id, @course.id, @study_session.id, "yes"), method: :post%><br>
          <%= link_to "No", invitation_update_path(current_user.id, @course.id, @study_session.id, "no"), method: :post%>
        <%end%>
      </div>
      <div class = "span5 recent_updates">
        <div class = "news_headings">
          <p>Invited<p>
        </div>
        <%= render :partial => 'invited' %>
        <div class = "news_headings">
          <p>RSVP Yes<p>
        </div>
        <%= render :partial => 'yes' %>
        <div class = "news_headings">
          <p>RSVP No<p>
        </div>
        <%= render :partial => 'no' %>
      </div>