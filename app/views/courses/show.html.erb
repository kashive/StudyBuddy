<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:term) %>:</strong></dt>
  <dd><%= @course.term %></dd>
  <dt><strong><%= model_class.human_attribute_name(:professor) %>:</strong></dt>
  <dd><%= @course.professor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= @course.department %></dd>
</dl>
<br>
<br>
<h1>Classmates</h1>
<table class="table", id="classmates">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @classmates.each do |classmate| %>
        <td><%= classmate.first_name + " " + classmate.last_name %></td>
        <td><%= classmate.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class ="action butttons">
  <%= link_to t('.add_course', :default => t("helpers.links.add_more_courses")),
            new_user_course_path,
            :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.delete")),
              user_course_path(current_user,@course),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dashboard_path, :class => 'btn'  %>
</div>

<%= render :partial => 'studysessions' %>

