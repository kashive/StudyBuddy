<div class = "span5" id = "list_table">
  <div class = "header_row">
    <div class = "header_pagination">
      <%=@course.name%>
      <!-- pagination of the table-->
    </div>
    <div class = "add_course_button">
      <%= link_to t('.add_study_session', :default => t("helpers.links.add_study_session")),
              new_user_course_study_session_path(current_user,@course),
              :class => 'btn btn-primary' %>
        </div>
  </div>
  <div class = "class_list">
    <dl class="dl-horizontal">
      <dt><strong>Term:</strong></dt>
      <dd><%= @course.term %></dd>
      <dt><strong>Professor:</strong></dt>
      <dd><%= @course.professor %></dd>
      <dt><strong>Department:</strong></dt>
      <dd><%= @course.department %></dd>
      <dt><strong>Number:</strong></dt>
      <dd><%= @course.course_number %></dd>
      <dt><strong>Current Enrollment:</strong></dt>
      <dd><%= Enrollment.where("course_name='#{@course.name}'").size() %></dd>
    </dl>
  </div>
</div>

<div class = "span5">
  <div class = "header_row">
  <div class = "header_pagination">
    Classmates
  </div>
  <script src = "//connect.facebook.net/en_US/all.js"></script>
  <div class = "add_course_button">
      <%=link_to "Invite your Facebook friends", "#", :id => "invite_fb_friends", :class=> 'btn btn-primary'%>
  </div>
</div>
  <table class="table", id="classmates">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @classmates.each do |classmate| %>
          <td><%= classmate.first_name + " " + classmate.last_name %></td>
          <td><%= classmate.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

</div>
<div class = "span1"></div>
</div>

