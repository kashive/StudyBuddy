  <div class = "span1"></div>
  
  <div class = "span10">
    <div class = "news_heading">
      <p>Study Sessions</p>
    </div>
      <div class = "span5 facebook_marketing">
        <div class = "news_headings">
          <p>My Study Sessions</p>
        </div> 
        <%= render :partial => '/study_sessions/studysessions' %>
      </div>
      <div class = "span5 recent_updates">
        <div class = "news_headings">
