<h1>Listing courses</h1>

<table>
  <tr>
  	<th>Department</th>
    <th>Name</th>
    <th>Term</th>
    <th>Professor</th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>    
    <td><%= course.department %></td>
    <td><%= course.name %></td>
    <td><%= course.term %></td>
    <td><%= course.professor %></td>
    <td><%= link_to 'Show', user_course_path(current_user,course)%></td>
    <td><%= link_to 'Edit', edit_user_course_path(current_user,course)%></td>
    <td><%= link_to 'Delete', user_course_path(current_user,course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

