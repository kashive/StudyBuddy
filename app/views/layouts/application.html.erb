<!DOCTYPE html>
<html>
<head>
  <title>StudyBuddy</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "http://0.0.0.0:9292/faye.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
	 <div class="navbar navbar-fixed-top">
		  <div class="navbar-inner">
		    <div class="container-fluid">
		    	<div class = "row-fluid">	
		    		<% if !user_signed_in? %>
			    		<div class ="span2"></div>
			    		<div class ="span8">
		    		<%else%>
		    			<div class = "span12">
		    		<%end%>
				      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				      </a>
				      <% if user_signed_in? %>
				      	<%= link_to "", dashboard_path(current_user), class: "brand" %>
				      <%else%>
				      	<%= link_to "", root_path, class: "brand" %>
				      <%end%>
				      <div class="nav-collapse">
				        <ul class="nav">
				          <% if user_signed_in? %>
				          <li><%= link_to "Dashboard", dashboard_path(current_user) %></li>
				          <li class="dropdown">
				        <a href="#" class="dropdown-toggle" data-toggle="dropdown">All Courses <b class="caret"></b></a>
						        <ul class="dropdown-menu">
						        <%getAllCourses.each do |course|%>
						        	<li class="dropdown-submenu">
					                  <%= link_to course.name, user_course_path(current_user,course)%>
					                  <ul class="dropdown-menu">
					                    <li><%= link_to "Add Study Session", new_user_course_study_session_path(current_user, course)%></li>
					                    <li><%=link_to "Remove Class",user_course_path(current_user,course),
					                    	 :method=>"delete",
					                    	 :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %></li> 
					                  </ul>
					                </li>
					            <%end%>  
					              <li class="divider"></li>
								  <li><%= link_to "Add New Course", new_user_course_path(current_user) %></li>
								  <li><%= link_to "See All Course's Study Sessions", user_study_sessions_path(current_user) %></li>
						        </ul>
						    </li>
				          	<li class="dropdown">
						        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Notifications <sub><%=numberOfUnseenNotifications%></sub> <b class="caret"></b></a>
						        <ul class="dropdown-menu notification">
								  <%= render 'notifications/dropdown'%>
								  <li><%= link_to "See all", user_notifications_path(current_user) %></li>
						        </ul>
						    </li>
				          	<li class="dropdown">
						        <a href="#" class="dropdown-toggle" data-toggle="dropdown">About us <b class="caret"></b></a>
						        <ul class="dropdown-menu">
								  <li><%= link_to "Our Idea", static_pages_idea_path %></li>
								  <li><%= link_to "How it works", static_pages_how_path %></li>
						          <li><%= link_to "Team", static_pages_team_path %></li>
						          <li><%= link_to "Contact us", new_get_in_touch_path %></li>
						          <li><%= link_to "Known Bugs", static_pages_bugs_path %></li>
						        </ul>
						    </li>
				          	<li class="dropdown">
						        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Signed in as <%= current_user.email %> <b class="caret"></b></a>
						        <ul class="dropdown-menu">
						          <li><%= link_to "Update Study Preference", new_user_schedule_path(current_user) %></li>
								  <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
						          <li><%= link_to "Sign out",destroy_user_session_path, method: :delete %></li>
						        </ul>
						    </li>				          	
				          <%else%>
				          	<li><%= link_to "Sign Up",new_user_registration_path %></li>
				          	<li><%= link_to "Sign In",new_user_session_path %></li>
				          	<li class="dropdown">
						        <a href="#" class="dropdown-toggle" data-toggle="dropdown">About us <b class="caret"></b></a>
						        <ul class="dropdown-menu">
								  <li><%= link_to "Our Idea", static_pages_idea_path %></li>
						          <li><%= link_to "How it works", static_pages_how_path %></li>
						          <li><%= link_to "Team", static_pages_team_path %></li>
						          <li><%= link_to "Contact us", new_get_in_touch_path %></li>
						          <li><%= link_to "Known Bugs", static_pages_bugs_path %></li>
						        </ul>
						    </li>
				          <%end%>
				        </ul>
				  </div>
			  </div>
		    </div>
		    <% if !user_signed_in? %>
		    	<div class ="span2"></div>
		    <%end%>
		  </div>
		</div>
	</div>
</div>

	<div class="container-fluid">		
		<div class ="row-fluid">
			<% flash.each do |name, msg| %>
			  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			    <a class="close" data-dismiss="alert">Ã—</a>
			    <%= msg %>
			  </div>
			<% end %>
			<div class ="span1"></div>
			<div class = "span10">
				<%= yield %>	
			</div>
			<div class = "span1"></div>
		</div>
	</div> 
</body>
</html>
