<% @page_title = "Dashboard" %>
<div class = "span5" id = "list_table">
	<div class = "header_row">
		<div class = "header_pagination">
			My Classes
			<!-- pagination of the table-->
			
				<i class="icon-circle-arrow-left" id ="class_pagination_left"></i>
				<i class="icon-circle-arrow-right" id ="class_pagination_right"></i>
			
		</div>
		<div class = "add_course_button">
			<%= link_to t('.add_course', :default => t("helpers.links.add_new_class")),
            	new_user_course_path(current_user),
            	:class => 'btn btn-primary' %>
        </div>
	</div>
	<div class = "class_list">
		<% if @courses.size == 0%>
			<h4>Please start by adding a new course</h4>
		<%end%>
		<% @courses.each_with_index do |course,index| %>
			<% if index>=0 && index<=3 %>
				<div class = "class_box top_class" data-link ="<%=user_course_path(current_user,course)%>" >
			<%elsif index>=4 && index<=5%>
				<div class = "class_box bottom_class" data-link ="<%=user_course_path(current_user,course)%>">		
			<%end%>
				<div class = "class_box_info">
					<div class = "left_info">
						<div class = "classname_heading">
							<%= course.name.upcase %>
						</div>
					</div>
					<div class = "right_info">
						 <ul class="class_stats">
							<li>Current Enrollment: <%=Enrollment.where("course_name='#{course.name}'").size()%></li>
							<li>Upcoming Study Sessions: <%=course.getUpcomingStudySessions.size%></li>
							<li><%= link_to t('.add_study_session', :default => t("helpers.links.add_study_session")),
                      new_user_course_study_session_path(current_user,course) %></li>
						</ul>
					</div>
				</div>
			</div>
		<%end%>
	</div>
	<div class = "class_box" id = "show_all_courses" data-link="<%=user_courses_path(current_user)%>">
		<div class="classname_heading" id = "show_all_courses_text">
			Show all courses
			
		</div>
	</div>

</div>

<div class = "span5" id = "activity_feed_list">
	<%= render "activities/index"%>
</div>

</div>
<div class = "span1"></div>
</div>

<div class = "row-fluid">
	<div class = "span1"></div>
	
	<div class = "span10">
		<div class = "news_heading">
			<p>News</p>
		</div>
		<script src = "//connect.facebook.net/en_US/all.js"></script>
			<div class = "span5 facebook_marketing">
				<div class = "news_headings">
					<p>Invite your Facebook Friends to Join StudyBuddy</p>
				</div> 
				Not many classmates in your course? Please <b><%=link_to "invite your Facebook friends", "#", :id => "invite_fb_friends"%></b> to join StudyBuddy and start studying with them!
				<br><br>
				<div class = "news_headings">
